@using cerensoytuna.Resource
@inject LocalizationService localizationService
@{
    ViewData["Title"] = "Sonuç";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .page-title {
        position: relative;
        display: block;
        width: 100%;
        padding: 70px 0px 70px 0px;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }
</style>

<section class="page-title centred" style="background-image: url(https://uploads.drcerensoytuna.com/site/page-title.jpg);">
    <div class="container">
        <div class="content-box">
            <h1>@localizationService.GetLocalizedHtmlString("SONUC")</h1>
            <ul class="bread-crumb clearfix">
                <li><a href="anasayfa/sayfa">@localizationService.GetLocalizedHtmlString("ANA SAYFA")</a></li>
                <li>@localizationService.GetLocalizedHtmlString("SONUC")</li>
            </ul>
        </div>
    </div>
</section>

<section class="event-details">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 content-side">
                @if (ViewBag.Type == 0)
                {
                    <div class="alert alert-danger">
                        <h3>@ViewBag.Result</h3>
                    </div>
                }

                else if (ViewBag.Type == 1)
                {
                    <div class="alert alert-success">
                        <h3>@ViewBag.Result</h3>
                    </div>
                }
            </div>
        </div>
    </div>
</section>